@page
@model BulkyWebRazor.Pages.Categories.IndexModel

<div class="container ">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Create New Category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th class="text-center">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td class="text-center">
                        <div style="display: flex; justify-content: center; gap-10px">
                            <a asp-page="/categories/edit" asp-route-id="@obj.Id"
                               class="btn btn-secondary mx-1 d-flex w-100 justify-content-center align-items-center">
                                <i class="bi bi-pencil-square me-2"></i> Edit
                            </a>
                            <a asp-page="/categories/delete" asp-route-id="@obj.Id"
                               class="btn btn-danger mx-1 d-flex w-100 justify-content-center align-items-center">
                                <i class="bi bi-trash-fill me-2"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
