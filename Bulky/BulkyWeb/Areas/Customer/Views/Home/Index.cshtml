@model IEnumerable<Product>

<div class="row mb-4">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-img-container p-3">
                    <img src="@product.ImageURL" class="card-img-top rounded-3" alt="@product.Title" />
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title text-uppercase fw-bold">@product.Title</h5>
                    <p class="card-text text-primary">@product.Author</p>
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
</div>