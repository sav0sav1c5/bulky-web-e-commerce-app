@model IEnumerable<Product>

<div class="container my-4">
    <div class="row pb-3">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-6 col-sm-12 pb-4">
                <div class="product-card border-2">
                    <div class="product-card-img-container">
                        <img src="@product.ImageURL" class="product-card-img-top rounded-top" alt="@product.Title" />
                    </div>
                    <div class="product-card-body text-center">
                        <p class="card-title text-uppercase fw-bold mb-1">@product.Title</p>
                        <p class="card-subtitle text-black">by @product.Author</p>
                        <p class="text-dark fw-semibold">List Price: <span class="text-decoration-line-through">@product.ListPrice.ToString("c")</span></p>
                        <p class="text-danger h5 fw-bold">As low as <span>@product.Price100.ToString("c")</span></p>
                        <div class="d-flex justify-content-center mt-auto">
                            <a asp-controller="Home" asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary w-75 rounded-3">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>